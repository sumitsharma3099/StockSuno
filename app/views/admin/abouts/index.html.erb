<!-- app/views/admin/abouts/index.html.erb -->

<div class="container mx-auto my-10 p-5 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">About Us</h1>

  <div class="text-gray-700 whitespace-pre-line">
    <%= @about.content %>
  </div>

  <% if @about.image_link.present? %>
    <div class="mt-6">
      <%= image_tag @about.image_link, class: "max-w-full h-auto rounded-lg shadow-lg", style: "max-width: 100%;" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "Edit About Us", edit_admin_about_path(@about), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
</div>
