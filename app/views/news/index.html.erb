<!-- app/views/news/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Today Stock News</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @news_items.each do |news| %>
      <div class="bg-white p-6 rounded-lg shadow-md flex flex-col">
        <img src="<%= news.image_link %>" alt="<%= news.title %>" class="mb-4 rounded">
        <h2 class="text-xl font-semibold mb-4"><%= news.title %></h2>
        <p class="text-gray-700 mb-4"><%= news.description %></p>
        <div class="text-sm text-gray-500 mb-4"><%= news.new_from %></div>
        <div class="mt-auto text-right">
          <a href="<%= news.link %>" target="_blank" class="text-blue-500 hover:underline">Read more</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
