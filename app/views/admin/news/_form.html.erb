<div class="container mx-auto p-6 bg-white rounded shadow-md">
  <%= form_with(model: [:admin, news_article], local: true) do |form| %>
    <% if news_article.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
        <h2 class="text-lg font-semibold"><%= pluralize(news_article.errors.count, "error") %> prohibited this news article from being saved:</h2>
        <ul class="mt-2">
          <% news_article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :title, class: "mt-1 p-2 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-medium" %>
      <%= form.text_area :description, rows: 5, class: "mt-1 p-2 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :link, class: "block text-gray-700 font-medium" %>
      <%= form.url_field :link, class: "mt-1 p-2 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :new_from, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :new_from, class: "mt-1 p-2 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :image_link, class: "block text-gray-700 font-medium" %>
      <%= form.url_field :image_link, class: "mt-1 p-2 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mt-6">
      <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
