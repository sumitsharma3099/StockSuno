<div class="bg-white shadow-md rounded-lg p-6">
  <h2 class="text-xl font-semibold mb-2"><%= news_article.title %></h2>
  <p class="text-gray-700 mb-4"><%= truncate(news_article.description, length: 100) %></p>
  <div class="flex justify-between items-center">
    <a href="<%= news_article.link %>" target="_blank" class="text-blue-500 hover:underline">Read More</a>
    <div class="space-x-2">
      <%= link_to "Show", admin_news_path(news_article), class: "text-green-500 hover:underline" %>
      <%= link_to "Edit", edit_admin_news_path(news_article), class: "text-blue-500 hover:underline" %>
      <%= link_to "Delete", admin_news_path(news_article), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
    </div>
  </div>
</div>
