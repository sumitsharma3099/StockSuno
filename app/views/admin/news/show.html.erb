<div class="container mx-auto my-10 p-5 bg-white shadow-md rounded-lg">
  <div>
    <h1 class="text-2xl font-semibold text-gray-800 mb-4"><%= @news_article.title %></h1>
    <p class="text-gray-700 mb-4"><%= @news_article.description %></p>
    <p class="text-gray-700 mb-4"><strong>Source:</strong> <%= @news_article.new_from %></p>
    <p class="text-gray-700 mb-4"><strong>Link:</strong> <%= link_to @news_article.link, @news_article.link, class: "text-blue-500 hover:text-blue-700" %></p>
    <div class="mb-4">
      <%= image_tag @news_article.image_link, class: "max-w-full h-auto rounded-lg shadow", style: "max-width: 100%; height: auto; max-height: 400px;" if @news_article.image_link.present? %>
    </div>
  </div>

  <div class="flex space-x-4 mt-6">
    <%= link_to "Edit this news", edit_admin_news_path(@news_article), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Back to news", admin_news_index_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    <%= button_to "Destroy this news", admin_news_path(@news_article), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
  </div>
</div>
