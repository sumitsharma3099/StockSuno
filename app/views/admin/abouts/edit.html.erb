<!-- app/views/admin/abouts/edit.html.erb -->

<div class="container mx-auto my-10 p-5 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">Editing About Us</h1>

  <%= form_with(model: @about, url: admin_about_path(@about), method: :patch, local: true, class: "space-y-4") do |form| %>
    <% if @about.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <strong class="font-bold">Oops! Something went wrong.</strong>
        <ul class="mt-3">
          <% @about.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :content, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :content, rows: 10, class: "form-textarea mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :image_link, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :image_link, class: "form-input mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= form.submit "Update About Us", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "Back", admin_abouts_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
